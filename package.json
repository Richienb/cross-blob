{
	"name": "cross-blob",
	"version": "2.0.1",
	"description": "Cross-platform Blob implementation for NodeJS and the Web.",
	"repository": "https://github.com/Richienb/cross-blob.git",
	"author": "Richie Bendall <richiebendall@gmail.com>",
	"license": "MIT",
	"main": "index.js",
	"browser": "browser.js",
	"exports": {
		"browser": "./browser.js",
		"default": "./index.js"
	},
	"files": [
		"index.js",
		"index.d.ts",
		"browser.js"
	],
	"engines": {
